{
  "name": "base-architecture-extension",
  "displayName": "Angular Base Architecture",
  "description": "Create files into features-modules on base architecture",
  "version": "1.0.0",
  "publisher": "TSCOSA",
  "author": "TSCO.SA",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "base-architecture-extension.createfeature",
        "title": "Base Architecture: Create Feature"
      }
    ],
    "menus": {
      "explorer/context": [{
          "command": "base-architecture-extension.createfeature",
          "group": "z_commands"
      }]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "vscode": {
    "resources": [
        "examples/**"
    ]
  }
}
